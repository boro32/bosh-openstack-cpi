#!/bin/bash

bin=$(dirname $0)

go get -u github.com/golang/lint/golint

errors=$(
  $bin/gofiles $bin/env golint \
    | grep -v 'should have comment.* or be unexported' \
    | grep -v 'composite literal uses unkeyed fields'
)

if [ "$(echo -n "$errors")" != "" ]; then
  echo "$errors"
  exit 1
fi
